@model P1WebMVC.Models.ViewModels.ExploreViewModel


<style>
    .suggestions {


        width: 20%;
        font-family: Arial, Helvetica, sans-serif;
        position: fixed;
        right: 20px;
        top: 10px;
        box-shadow: 2px 2px 10px 10px rgba(0, 0, 0, 0.111);
        border-radius: 8px;


        .switch_user,
        .suggested_user {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;

            .profile_image {
                flex: 1;
                img{
                    width: 50px;
                    height: 50px;
                    border-radius: 50%;
                }

            }


            .profile_username {
                flex: 2;
                display: flex;
                flex-direction: column;
                gap: 5px;

                span:first-child {
                    font-weight: 700;
                }

                ;

                span:last-child {
                    color: grey;

                }
            }


            .switch {
                flex: 1;

                span {
                    color: rgb(108, 36, 171);
                    letter-spacing: 1px;
                    font-weight: 600;
                }
            }


        }



        .suggesting_heading,
        .trending_heading {
            display: flex;
            justify-content: space-between;
            padding: 20px;

            span:first-child {
                font-size: 18px;
                font-weight: 700;
            }

            span:last-child {

                color: grey;
                font-weight: 600;
            }
        }
    }
</style>




<div class="suggestions">

    <div class="switch_user">

        <div class="profile_image">
            <img src="@Model?.LoggedInUser?.ProfilePic" />
        </div>



        <div class="profile_username">
            <span> @Model?.LoggedInUser?.Username </span>

            <span> #irfan33</span>
        </div>


        <div class="switch">

            <span> Switch </span>
        </div>



    </div>


    <div class="suggesting_heading">

        <span>Suggested For You</span>
        <span> See All</span>

    </div>



@foreach(var user in Model.SuggestedUsers){

     <div class="suggested_user">

        <div class="profile_image">
            <img src="@user.ProfilePic" />
        </div>



        <div class="profile_username">
            <span> @user.Username </span>

            <span> #dummyId</span>
        </div>


        <div class="switch">

            <span> Follow </span>
        </div>



     </div>

}





    







    <div class="trending_heading">

        <span>Trending Artists</span>
        <span> See All</span>

    </div>




</div>