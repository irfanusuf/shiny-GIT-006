                </div>

                <div>
                    <span> Email Address</span>
                    <span> @Model?.LoggedInUser?.Email </span>
                </div>

                <div>
                    <span> Website </span>
                    <span> www.slothUi.com </span>
                </div>


            </div>

        </div>
