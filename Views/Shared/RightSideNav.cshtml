            <div class="user_stats">

                <div>
                    <span> @Model?.LoggedInUser?.Posts.Count </span> <span> Posts </span>
                </div>

                <div>
                    <span> 12.7 K </span> <span> Followers </span>
                </div>

                <div>
                    <span>221</span> <span> Following </span>
                </div>

            </div>

            <div class="about_me">

