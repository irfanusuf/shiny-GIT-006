@model P1WebMVC.Models.ViewModels.ExploreViewModel


<style>
.right_profile_nav {

        width: 20%;
        display: flex;
        flex-direction: column;
        align-items: center;
        font-family: Arial, Helvetica, sans-serif;
        position: fixed;
        right: 20px;
        top: 10px;
        box-shadow: 2px 2px 10px 10px rgba(0, 0, 0, 0.111);
        border-radius: 8px;


        .profile_pic {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        border: 1px solid black;
        margin-top: 30px;
    }

    .username {
        font-weight: 700;
        margin: 5px 0px;
    }

    .userid {
        margin: 5px 0px;
    }

    .location {
        color: grey;
    }

    .user_stats{
        display: flex;
          gap: 30px;
          margin-top: 20px;

        div{
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 5px; 

            span:first-child{
                  font-weight: 700;
            }

            span:last-child{
                    color: grey;
            }

        }
    }

    .about_me{
        padding: 30px;
        h3{
            margin: 0;
            margin-bottom: 10px;
        }
        span{
            color: grey;
        }

        span:last-child{
            color: black;
            cursor: pointer;
        }
    }

    .story_highlights{
        display: flex;
        gap: 10px;

        .story{
            width: 60px;
            height: 60px;
            border-radius: 50%;
            border: 1px solid black ;
        }
    }

    .contact_info{
        width: 90%;
        padding: 20px;
        margin-top: 80px;


        div{
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;

            span:first-child{
                font-weight: 700;
                margin-bottom: 10px;
            }

            span:last-child{
                color: grey;
            }

        }
    }

}
</style>


        <div class="right_profile_nav">

            <img class="profile_pic" src="" alt="profileimage" />

